import operator
import pandas as pd
def frequencies(t:str)-> dict:

    dict = {}
    total = 0
    with open(t, "r", encoding ="utf-8") as f:
        for n in t:
            keys = dict.keys()
            total += 1
            if n in keys:
                dict[n] += 1
            else:
                dict[n] = 1
    table_percentages = {}
    for key in dict:
        percentage = (dict[key] / total) * 100
        table_percentages[key] = round(percentage,2)
        df = pd.DataFrame(sorted(table_percentages.items(), key = operator.itemgetter(1), reverse=True))
    return (df)


t = "anna_karenina.txt"

print(frequencies(t))

def lines(filename):

    with open(filename, "r", encoding = "UTF-8") as file:
            line_by_line = file.readlines()
            line_by_line = [line.strip() for line in line_by_line]
            line_by_line = list(filter(None,line_by_line))
            line_by_line.sort(key = len, reverse = False)
            for line in line_by_line:
                length = len(line)
                c = print(f"({length}) {line}")
            return c



filename = "/Users/irynamalashenko/Documents/pythonProject4/sonnet99.txt"

lines(filename)
